<Window x:Class="ITE217_Week4_SingletonPattern.Views.PopupTwo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ITE217_Week4_SingletonPattern.Views"
        mc:Ignorable="d"
        ResizeMode="CanResize" SizeToContent="WidthAndHeight"
        
        xmlns:FF="clr-namespace:MvvmDialogs;assembly=MvvmDialogs"
        FF:DialogServiceViews.IsRegistered="True"        
        
        Title="PopupTwoView" Height="150" Width="300">
    <StackPanel>
        <TextBlock Text="{Binding Question}" />
        <Button Content="OK" Command="{Binding OKCommand}"/>
    </StackPanel>
</Window>
